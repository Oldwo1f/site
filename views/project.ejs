                        </div> -->
                        <!-- Portfolio Single - Share End -->

                    </div>

                    <!-- Portfolio Single Content
                    ============================================= -->
                    <div class="col_two_third portfolio-single-content col_last nobottommargin">

                        <!-- Portfolio Single - Description
                        ============================================= -->
                        <div class="fancy-title title-dotted-border">
                            <h2><%- __('Project Info') %>:</h2>
                        </div>
                        <div class="contentMarked">
                         <%- marked(project.content) %>  
                        </div>
                        <!-- Portfolio Single - Description End -->

                    </div><!-- .portfolio-single-content end -->

                    <div class="clear"></div>
                    <% if(related){%>
                    <% if(related.length>0){%>
                    <div class="divider divider-center"><i class="icon-circle"></i></div>

                    <!-- Related Portfolio Items
                    ============================================= -->
                     
                     
                    <h4><%- __('Related Projects') %>:</h4>

                    <div id="related-portfolio" class="owl-carousel portfolio-carousel">
                    	 <% for(var i=0; i < related.length ; i++){%>
                    	 	
                        <div class="oc-item">
                            <div class="iportfolio">
                                <div class="portfolio-image">
                                    <a href="portfolio-single.html">
                                        <img src="file/image/adminThumbs/<%- related[i].img.filename %>" alt="<%- related[i].img.alt %>">
                                    </a>
                                    <div class="portfolio-overlay">
                                        <a href="projet/<%- related[i].id %>/<%- related[i].rewriteurl %>" class="center-icon"><i class="icon-line-ellipsis"></i></a>
                                    </div>
                                </div>
                                <div class="portfolio-desc">
                                    <h3><a href="projet/<%- related[i].id %>/<%- related[i].rewriteurl %>"><%- related[i].title %></a></h3>
                                </div>
                            </div>
                        </div>
                    	<%}%>
                        

                    </div><!-- .portfolio-carousel end -->

                    <script type="text/javascript">

                        jQuery(document).ready(function($) {

                            var relatedPortfolio = $("#related-portfolio");

                            relatedPortfolio.owlCarousel({
                                margin: 30,
                                nav: false,
                                dots:true,
                                autoplay: true,
                                autoplayHoverPause: true,
                                responsive:{
                                    0:{ items:1 },
                                    480:{ items:2 },
                                    768:{ items:3 },
                                    992:{ items:4 }
                                }
                            });

                        });

                    </script>
                     <%}%>
