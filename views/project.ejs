<!-- Document Wrapper
    ============================================= -->
    <div id="wrapper" class="clearfix">
<% include header.ejs %>

        <!-- Page Title
        ============================================= -->
        <section id="page-title">

            <div class="container clearfix">
                <h1><%- project.title %></h1>
                <div id="portfolio-navigation">
            	 	<% if(prev){%>
                    	<a href="<%- prev %>"><i class="icon-angle-left"></i></a>
                	 
            	 	<%}%>
                    <a href="/portfolio"><i class="icon-line-grid"></i></a>
             		<% if(next){%>
                      	<a href="<%- next %>"><i class="icon-angle-right"></i></a>
                  	<%}%> 
                </div>
            </div>

        </section><!-- #page-title end -->

        <!-- Content
        ============================================= -->
        <section id="content">

            <div class="content-wrap toppaddingsmall">

                <div class="container clearfix">

                    <!-- Portfolio Single Gallery
                    ============================================= -->
                    <div class="col_full portfolio-single-image">
                        	 <% if(project.images.length==1){%>
                        	 	 <div class="portfolio-image">
									<img src="file/image/originalsize/<%- project.images[0].image.filename %>" alt=""></a>
                        	 	 </div>
                        	 <%}else if(project.images.length>1){%>
                        		<div class="fslider" data-arrows="true" data-animation="slide" data-pause="20000">
	                            <div class="flexslider">
		                                <div class="slider-wrap">
		                                	
		                                	<% for(var i=0; i< project.images.length; i++){ %> 
		                                    	<div class="slide" style="text-align:center"><img style="max-height:768px;max-width:100%;width:auto;display: inline-block;"src="file/image/originalsize/<%- project.images[i].image.filename %>" alt="<%- project.images[i].image.alt %>"></div>
		                                	<%}%>
                                   
		                                </div>
	                            </div>
	                            </div>
                            <%}%>
                    </div><!-- .portfolio-single-image end -->

                    <div class="col_one_third nobottommargin">

                        <!-- Portfolio Single - Meta
                        ============================================= -->
                        <div class="panel panel-default events-meta">
                            <div class="panel-body">
                                <ul class="portfolio-meta nobottommargin">
                                    <!-- <li><span><i class="icon-user"></i>Created by:</span> John Doe</li> -->
                                    <li><span><i class="icon-calendar3"></i><%- __('Terminé en') %>:</span>  <%- moment(project.date).format('MMMM YYYY') %>  </li>
                                    <% if(project.tags.length){%>
                                    <li><span><i class="icon-tags"></i><%- __('Tags') %>:</span> 
                                    	<% for(var i=0; i< project.tags.length ; i++){%>
                                     	<%- project.tags[i].text %>
                                     	 <% if(i+1 != project.tags.length){%>
                                     	 		,
                                     	 <%}%>
                                     <%}%> 
                                 	</li>
                                    <%}%>
                                    <% if(project.documents.length){%>
                                    <li><span><i class="icon-paperclip"></i><%- __('Pièces jointes') %>:</span> 
                                    	<ul class="piecejointes">
                                    		 <% for(var i=0; i< project.documents.length ; i++){%>
                                    		<li><a href="file/document/<%- project.documents[i].document.filename %>" target="_BLANK"><%- project.documents[i].document.name %></a> </li>
                                    		 <%}%>
                                    	</ul>
                                    </li>
                        			<%}%>
                                    <!-- <li><span><i class="icon-link"></i>Client:</span> <a href="#">Google</a></li> -->
                                </ul>
                            </div>
                        </div>
                        <!-- Portfolio Single - Meta End -->

