 <div class="portfo">
           
            <div id="main">
            		<h2><%- article.title %></h2>

                    <% if(typeof(article.images[0])=='object' && article.publishVideo==false){ %>
                 	<div class="box boximages container">
                        <div  class="col col-xs-12 ">
                            <img src="/file/image/originalsize/<%= article.images[0].image.filename %>" alt="<%= article.images[0].image.alt %>"/>
                        </div>
                    </div>
                    <%}%>

                    <% if(article.publishVideo==true && typeof article.video !== 'undefined'){ %>
                 	<div class="box boximages container">
                        <div  class="col col-xs-12 ">
                        	<div class="pretty-embed" data-pe-videoid="<%= article.video %>"></div>
                        </div>
                    </div>
                    <%}%>
                   
                            
                    <div class="box container">
                        
                        <div  class="col col-xs-12 ">
                        	<div class="mdcontent">
                                <%- marked(article.content) %>
                        	</div>
                                <div class="author text-right">
                                	<% if(typeof article.author !=='undefined' && article.author.usename){ %>
	                                <%= article.author.name %>
	                                <%}else if(typeof article.author !=='undefined' && article.author.pseudo){%>
	                                <%= article.author.pseudo %>
	                                <%}%>
                                </div>
                                <div class="date text-right">
                                	<%= moment(new Date(article.createdAt)).fromNow() %>
                                </div>
                        </div>
                        <% if(article.documents.length > 0) {%> 
	                        <div  class="col col-xs-12 ">
	                            <div class="pj">
	                            	<label><%=  __('PiÃ¨ces jointes') %></label>
	                               	<ul>
	                               		<% for(var i=0; i<article.documents.length; i++) {%>
					                    <li><a href="/file/document/<%= article.documents[i].document.filename %>" target="_BLANK"><%= article.documents[i].document.filename %></a></li>
					                    <% } %>  
	                               	</ul>
	                        	</div>
	                        </div>
	                        <% } %>
                        
                    </div> 

                    

                    <% 
                    var i=1;
                    if(article.publishVideo==true && typeof article.video !== 'undefined'){
                    	i=0;
                    }
                    for(i; i<article.images.length; i++) {%>
                   
                            
                    <div class="box boximages container">
                       
                        <div  class="col col-xs-12">
                            <img src="/file/image/originalsize/<%= article.images[i].image.filename %>" alt="<%= article.images[i].image.alt %>"/>
                        </div>
                    </div>
                    <% } %>  
                    
                    <div id="socialscontainer" class="">
	                    <div id="socials" class="">

	                    	<div id="twitter"  data-url="<%= pathtoshare %>" data-text="<%= article.title %>"></div> 
	                    	<div id="facebook"  data-url="<%= pathtoshare %>" data-text="<%= article.title %>"></div>  
	                    </div>       
                    </div>       
                    <% if(article.activeComent == true) {%>
	                    <div class="box comments container">
	                        <header>
	                            <h2><%= __('Comments') %></h2>
	                        </header>
	                        <div class="text-center">
		                        <button class="button toggleform addCommentForm <%= article.id %>"  aria-expanded="false" data-toggle="collapse" data-target=".<%= article.id %>" ><%= __('Laisser un commantaire') %></button>
	                        </div>
	                        <div id="" class="box boxcomment collapse addCommentForm <%= article.id %>">
	                        <form method="post" class="commentform" item="article" itemid="<%= article.id %>" >
		                        <p class="contact-name">
				                <input id="contact_name" type="text" placeholder="<%= __('form-full_name') %>" value="" name="name" />
				                </p>
				                <p class="contact-email">
				                  <input id="contact_email" type="text" placeholder="<%= __('form-email_adress') %>" value="" name="email" />
				                </p>
				                <p class="contact-message">
				                  <textarea id="contact_message" placeholder="<%= __('form-message') %>" name="message" rows="15" cols="40"></textarea>
				                </p>
				                
				                <div class="response">
				                        <div class="row errorMessageRequired">
				                            <div class="12u text-center">
				                                <small class=" label label-danger"><%= __('contact_all_required') %></small>
				                            </div>
				                        </div>
				                        <div class="row errorMessageError">
				                            <div class="12u text-center">
				                                <small class=" label label-danger"><%= __('contact_error_message') %></small>
				                            </div>
				                        </div>
				                        <div class="row SuccessMessage">
				                            <div class="12u text-center">
				                                <small class=" label label-success"><%= __('contact_success_message') %></small>
				                            </div>
				                        </div>
				                </div>
				                <p class="contact-submit">
				                  <input id="contact-submit" type="submit" class="submit" value="<%= __('form-send-button') %>"></input>
				                </p>
		                        <div class="cache2"><%= __('comment-ok') %></div>
		                    </form>
	                        </div>
	                        <ul>
                				<% for(var j=0; j<article.comments.length; j++) {%>
	                        	<li class="box boxcomment">
	                        		<div class="author"><strong><%= article.comments[j].author %></strong></div>
	                        		<div class="date pull-right small"><%= moment(new Date(article.comments[j].createdAt)).fromNow() %></div>
	                        		<p><%= article.comments[j].content %></p>

	                        		<ul>
		                				<% for(var k=0; k<article.comments[j].reponses.length; k++) {%>
			                        	<li class="box boxcomment">
			                        		<div class="author"><strong><%= article.comments[j].reponses[k].author %></strong></div>
			                        		<div class="date pull-right small"><%= moment(new Date(article.comments[j].reponses[k].createdAt)).fromNow() %></div>
			                        		<p><%= article.comments[j].reponses[k].content %></p>
			                        		
			                        	</li>
		                				<% } %>
			                        </ul>
			                        <div class="<%= article.comments[j].id %> reply"  title="<%= __('reply') %>"> <i class="fa fa-reply" data-toggle="collapse" aria-expanded="false" data-parent=".comments" data-target=".<%= article.comments[j].id %>"></i></div>
			                        <div id="" class="box boxcomment collapse addCommentForm <%= article.comments[j].id %>">
			                        <form method="post" class="commentform" item="comment" projid="<%= article.id %>" itemid="<%= article.comments[j].id %>">
				                        <p class="contact-name">
				                <input id="contact_name" type="text" placeholder="<%= __('form-full_name') %>" value="" name="name" />
				                </p>
				                <p class="contact-email">
				                  <input id="contact_email" type="text" placeholder="<%= __('form-email_adress') %>" value="" name="email" />
				                </p>
				                <p class="contact-message">
				                  <textarea id="contact_message" placeholder="<%= __('form-message') %>" name="message" rows="15" cols="40"></textarea>
				                </p>
				                
				                <div class="response">
				                        <div class="row errorMessageRequired">
				                            <div class="12u text-center">
				                                <small class=" label label-danger"><%= __('contact_all_required') %></small>
				                            </div>
				                        </div>
				                        <div class="row errorMessageError">
				                            <div class="12u text-center">
				                                <small class=" label label-danger"><%= __('contact_error_message') %></small>
				                            </div>
				                        </div>
				                        <div class="row SuccessMessage">
				                            <div class="12u text-center">
				                                <small class=" label label-success"><%= __('contact_success_message') %></small>
				                            </div>
				                        </div>
				                </div>
				                <p class="contact-submit">
				                  <input id="contact-submit" type="submit" class="submit" value="<%= __('form-send-button') %>"></input>
				                </p>
		                        <div class="cache2"><%= __('comment-ok') %></div>
				                    </form>
			                        </div>
	                        	</li>
                				<% } %>
	                        </ul>
	                    </div>
                    <% } %>
                

            </div>

        
 </div>
<script type="text/javascript">

var article = <%- JSON.stringify(article) %>;
        console.log(article);


$('.fancybox-inner').niceScroll({
	cursorcolor:'#EEC782',
	cursorborderradius:'0px',
	cursoropacitymin:0,
	cursoropacitymax:0.75,
	mousescrollstep: 80,
	autohidemode:'leave',
	scrollspeed:30
});
$().prettyEmbed();
$('.commentform').submit(function (e) {
	console.log('commentform');
		e.preventDefault()
		console.log($(this));
		$this = $(this)
		var item = $this.attr('item')
		var rep = $this.attr('reponse')
		var itemid = $this.attr('itemid')
		var projid = $this.attr('projid')
		var name = $this.find('input[name="name"]').val()
		var email = $this.find('input[name="email"]').val()
		var message = $this.find('textarea[name="message"]').val()
		console.log(name);
		console.log(email);
		console.log(message);
		console.log(item);
		console.log(itemid);
		var postData = $this.serialize();
		$this.find('.errorMessageRequired').hide()
		$this.find('.errorMessageError').hide()

		console.log(postData);
		if(item == 'article')
		{
			if(rep){

			}else{

				$.ajax(
			    {
			        url : '/article/'+itemid+'/addComment',
			        type: "POST",
			        data : postData,
			        success:function(data, textStatus, jqXHR) 
			        {
			        	$this.find('.errorMessageRequired').hide()
			        	$this.find('.errorMessageError').hide()
			        	console.log('DATA',data);
			            $this.find('.cache2').show()
			            console.log($this.parent());
			            setTimeout(function (argument) {
				            $this.parent().collapse('hide');
			            },2000)
			        },
			        error: function(jqXHR, textStatus, errorThrown) 
			        {
			            //if fails    
			            console.log('errorThrown');  
			            console.log(errorThrown);  
			            console.log(textStatus);  
			            console.log(JSON.parse(jqXHR.responseText).error);  
			            if(JSON.parse(jqXHR.responseText).error=="E_VALIDATION"){
			            	$this.find('.errorMessageRequired').fadeIn()
			            }else{
			            	$this.find('.errorMessageError').fadeIn()
			            }
			        }
			    });

			}
		}
		if(item == 'comment')
		{
			if(rep){

			}else{

				$.ajax(
			    {
			        url : '/article/addReponse/'+itemid+'/'+projid,
			        type: "POST",
			        data : postData,
			        success:function(data, textStatus, jqXHR) 
			        {
			        	$this.find('.errorMessageRequired').hide()
			        	$this.find('.errorMessageError').hide()
			        	console.log('DATA',data);
			            $this.find('.cache2').show()
			            console.log($this.parent());
			            setTimeout(function (argument) {
				            $this.parent().collapse('hide');
			            },2000)
			        },
			        error: function(jqXHR, textStatus, errorThrown) 
			        {
			            //if fails    
			            console.log('errorThrown');  
			            console.log(errorThrown);  
			            console.log(textStatus);  
			            console.log(JSON.parse(jqXHR.responseText).error);  
			            if(JSON.parse(jqXHR.responseText).error=="E_VALIDATION"){
			            	$this.find('.errorMessageRequired').fadeIn()
			            }else{
			            	$this.find('.errorMessageError').fadeIn()
			            }
			        }
			    });

			}
		}
	})

</script>